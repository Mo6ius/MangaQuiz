        <Button
            android:id="@+id/submitButton"
            style="@style/PrimaryButton"
            android:onClick="showResult"
            android:text="@string/submit"
            android:theme="@style/PrimaryButton" />

        <TextView
            android:id="@+id/result"
            style="@style/ResultText" />

    </LinearLayout>

