            <RadioButton
                android:id="@+id/ans1c"
                style="@style/AnswerTextStyle"
                android:text="@string/answer1c" />

            <RadioButton
                android:id="@+id/ans1d"
                style="@style/AnswerTextStyle"
                android:text="@string/answer1d" />

            <RadioButton
                android:id="@+id/ans1e"
                style="@style/AnswerTextStyle"
                android:text="@string/answer1e" />
        </RadioGroup>

        <RadioGroup style="@style/RadioGroupStyle">

            <TextView
                style="@style/QuestionTextStyle"
                android:text="@string/question2" />

