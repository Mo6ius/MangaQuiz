            <RadioButton
                android:id="@+id/ans2b"
                style="@style/AnswerTextStyle"
                android:text="@string/answer2b" />

            <RadioButton
                android:id="@+id/ans2c"
                style="@style/AnswerTextStyle"
                android:text="@string/answer2c" />

            <RadioButton
                android:id="@+id/ans2d"
                style="@style/AnswerTextStyle"
                android:text="@string/answer2d" />

            <RadioButton
                android:id="@+id/ans2e"
